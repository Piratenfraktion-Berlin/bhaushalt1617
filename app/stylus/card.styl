.app-wrapper
  #cards 
    max-width:750px 
    margin:0 auto 2.5em auto

  hr
    border:none 
    border-top: 1px solid #ddd 
    margin: 3em auto
    max-width:75%
    

  .card 
    padding: 3.5em 0 1.5em 0
    position: relative
    
    p
      margin:0
      font-size: 14px 
               
    .card-title-name 
      font-size:24px
      font-family: 'PoliticsHeadBold', sans-serif
      max-width: 610px
      line-height: 1
    
    .card-subtitle
      color: $fontgrey
      margin-bottom:26px
      font-size:18px
    
    .card-change 
      position: absolute
      top: 0
      left: 0
      font-weight: 700
      font-size: 22px
      color: $orange
      
      .absolute 
        color: #777
        font-size:14px 
        text-align:right

      .fa 
        margin-right: 10px
      
      .fa-arrow-up 
        transform: rotate(45deg)
      
      .fa-arrow-down 
        transform: rotate(-45deg)

    .card-person
      margin:30px 0
      
      .card-person-name
        font-weight:700
        font-size:17px
        
      img
        border-radius:2px 
        float:left 
        margin-right:24px
        width: 95px 
        
    .card-piratenfraktion
      .card-piratenfraktion-title 
        font-weight: 700
        font-size: 17px
        background: $orange
        color: #fff
        width: auto
        display: inline-block
        margin-bottom: 10px
        padding: 2px 10px
        